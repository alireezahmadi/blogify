<%- contentFor('body') %>
  <!-- banner -->
  <div class="bg-cover bg-no-repeat bg-center py-36" style="background-image: url('assets/images/banner-bg.jpg');">
    
</div>
<!-- ./banner -->
 

    <!-- categories -->
    <div class="container py-16">
        <h2 class="text-2xl font-medium text-gray-800 rtl mb-6">دسته بندی مقالات</h2>
        <div class="sm:grid sm:grid-cols-3 lg:grid lg:grid-cols-6 gap-3">
            <% if(categories.length){%>
                <% for(let category of categories){%>
                    <div class="relative rounded-sm overflow-hidden group w-full">
                        
                        <a href="/blog/category/<%- category.slug%>"
                            class="bg-black bg-opacity-40  h-[150px] flex items-center justify-center text-xl text-white font-roboto font-medium group-hover:bg-opacity-60 transition"><%- category.title%></a>
                    </div>
                    
                <%} %>    
            <%} %>
           
        </div>
    </div>
    <!-- ./categories -->

    <!-- new arrival -->
    <% if(newestBlogs.length){%>
        <%- include('./items', {objects:newestBlogs, title:' جدید ترین مقالات'}) %>
    <%}%>
    <% if(mostComments.length){%>
        <%- include('./items', {objects:mostComments, title:'  پربحث ترین مقالات'}) %>
    <%}%>
   
    <!-- ./new arrival -->
