<%- contentFor('title') %>
تغییر گذرواژه
    <%- contentFor('body') %>
        <div class="contain py-16 rtl">
            <div class="max-w-lg mx-auto shadow px-6 py-7 rounded overflow-hidden">
                <% if(messages.length > 0){%>
                    <div class="flex flex-col items-end text-red-500 bg-red-100 px-2 py-3 mb-3">
                            <% messages.forEach(err=> {%>
                                <p> <%- err %> </p>
                            <%}) %>
                    </div>
    
                <%} %>
                <% if(suucessMessage.length>0){%>
                    <p class="bg-green-300 text-green-500 text-end p-3 mb-2"><%-  suucessMessage[0] %></p>
                <%} %>
                <h2 class="text-2xl uppercase font-medium mb-1">تغییر گذرواژه</h2>

                <form  method="post" autocomplete="off">
                    <div class="space-y-2">
                        <div>
                            <label for="password" class="text-gray-600 mb-2 block">گذرواژه جدید</label>
                            <input type="password" name="password" id="password"
                                class="block w-full border border-gray-300 px-4 py-3 text-gray-600 text-sm rounded focus:ring-0 focus:border-primary placeholder-gray-400"
                                placeholder="****************">
                        </div>

                    </div>

                    <div class="mt-4">
                        <button type="submit"
                            class="block w-full py-2 text-center text-red-500 bg-primary border border-primary rounded hover:bg-transparent hover:text-primary transition uppercase font-roboto font-medium">ثبت</button>
                    </div>
                </form>



            </div>
        </div>